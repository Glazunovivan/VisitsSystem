@page "/add-group"

@using VisitsApp.Core.Models
@using VisitsApp.Core.Services

@inject GroupService service;

<div class="container">
    <h3>Создание новой группы</h3>

    <div class="card p-3">
        <div class="mb-2">
            <label class="form-label">Название группы</label>
            <input class="form-control" @bind="name" />
        </div>

        <button class="btn btn-primary w-100" @onclick="AddGroupEntity">Сохранить</button>
    </div>
</div>

@code 
{

    private string name;

    protected override async Task OnInitializedAsync()
    {

    }

    private async Task AddGroupEntity()
    {
        try
        {
            await service.AddGroup(name);
            name = string.Empty;
        }
        catch (Exception ex)
        {
            
        }

    }
}
