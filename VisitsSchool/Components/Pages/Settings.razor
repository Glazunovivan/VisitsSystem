@page "/settings"

@namespace VisitSchool.Services
@inject SettingsService service
@inject IJSRuntime JS

<div class="container mt-4">
    <!-- Заголовок и Версия -->
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom pb-2">
        <h3 class="fw-bold mb-0">Настройки</h3>
        <span class="text-muted">Версия: <span class="badge bg-light text-dark border">@service.GetVersionApp()</span></span>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <!-- Секция пути к БД -->
            <div class="mb-4">
                <label class="form-label text-uppercase fw-bold text-muted small mb-2">Путь к базе данных</label>
                <div class="bg-light p-3 rounded border">
                    @* text-break важен, чтобы длинный путь не вылезал за границы экрана *@
                    <code class="text-break small text-dark">@service.GetDbPath()</code>
                </div>
                <div class="form-text mt-2">
                    Этот файл содержит все ваши локальные данные и настройки.
                </div>
            </div>

            <hr class="my-4 text-muted opacity-25" />

            <!-- Опасная зона -->
            <div class="bg-light-danger p-3 rounded-3 d-flex align-items-center justify-content-between border border-danger border-opacity-10">
                <div>
                    <h6 class="mb-1 fw-bold text-danger">Опасная зона</h6>
                    <p class="small mb-0 text-muted">Полное удаление всех записей из базы данных без возможности восстановления.</p>
                </div>
                <button class="btn btn-danger px-4" @onclick="OnDeleteDbData">
                    <i class="bi bi-trash3 me-2"></i> Очистить данные
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Дополнительный лоск */
    .bg-light-danger {
        background-color: rgba(220, 53, 69, 0.03);
    }
    .extra-small {
        font-size: 0.75rem;
    }
    code {
        user-select: all; /* Позволяет выделить путь одним кликом */
    }
</style>

@code 
{

    private async Task OnDeleteDbData()
    {
        try
        {
            var result = await service.ClearDataBase();
            if (result == true)
            {
                await JS.InvokeVoidAsync("alert", "База данных успешно очищена!");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Произошла ошибка при очистке базы данных: {ex.Message}. Inner Exception: {ex.InnerException?.Message}");
        }
    }
}
